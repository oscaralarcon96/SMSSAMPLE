<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SMScomprobarZona">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:background="#a2224c"
            android:gravity="center"

            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme">

            <ImageView
                android:layout_width="206dp"
                android:layout_height="66dp"
                android:padding="0dp"
                android:src="@drawable/logo_sms_consulting"
                android:translationX="80dp" />

        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="307dp"

        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="94dp"
        android:layout_marginBottom="269dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="55dp">


            <TextView
                android:id="@+id/tv_tienda"
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:background="#A2224C"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="65dp">


            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_fa"
                android:layout_width="135dp"
                android:layout_height="match_parent"
                android:background="@drawable/btn_color"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:id="@+id/tv_fc"
                android:layout_width="190dp"
                android:layout_height="90dp"
                android:background="@drawable/btn_color"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="65dp">


            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_ciudad"
                android:layout_width="190dp"
                android:layout_height="90dp"
                android:background="@drawable/btn_color"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:id="@+id/tv_zonas"
                android:layout_width="190dp"
                android:layout_height="90dp"
                android:background="@drawable/btn_color"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="65dp">


            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_avance"
                android:layout_width="190dp"
                android:layout_height="38dp"
                android:background="@drawable/btn_color_redondo"
                android:gravity="center"
                android:text="% AVANCE"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:id="@+id/tv_unidades"
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:background="@drawable/imput_black"
                android:gravity="center"
                android:text="UNIDADES CONTADAS"
                android:textColor="#000000"
                android:textSize="16sp" />
        </TableRow>


    </TableLayout>

    <RelativeLayout
        android:id="@+id/rl_avance"
        android:layout_width="match_parent"
        android:layout_height="206dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="59dp"
        android:orientation="vertical"
        android:visibility="visible">

        <ProgressBar
            android:id="@+id/pb_porcentaje"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="221dp"
            android:layout_height="202dp"
            android:layout_centerInParent="true"
            android:indeterminate="false"
            android:max="100"
            android:progress="50"
            android:progressDrawable="@drawable/style_circular"
            android:secondaryProgress="100" />

        <TextView
            android:id="@+id/tv_porcentaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="sample"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_unidades"
        android:layout_width="match_parent"
        android:layout_height="206dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="59dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="hola_mundo"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </RelativeLayout>



</RelativeLayout>